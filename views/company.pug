extends layout

block content
    - if (type == "parent") {
    form(action="/company/new",method="post", enctype="multipart/form-data")
        label='Name'
        input(type="text",name="name")
        label.radio-inline='Cash'    
        input(type="text",name="cash")
        input(type="submit",value="submit")
    - } else if (type == "exist") {
    form(action="/company/"+data.id,method="post")
        input(type="text",name="name",value=data.name)
        input(type="text",name="cash",value=data.cash)
        input(type="submit",name="submit",value="Update")
        input(type="submit",name="submit",value="Delete")
    - } else if (type == "child") {
    form(action="/company/new/"+id,method="post")
        input(type="text",name="name")
        input(type="text",name="cash")
        input(type="submit",value="submit")
    - }